{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": false,
        "ordered-imports": true,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": true,
        "trailing-comma": false,
        "variable-name": {
            "options": [
                "allow-leading-underscore"
            ]
        }
    }
}